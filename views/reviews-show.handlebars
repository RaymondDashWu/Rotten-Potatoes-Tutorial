<a href="/">Back to Home</a>
<input id="movieId" type="hidden" movie-id="{{review.movieId}}">
<div class = "row">
    <div class = "col-sm-6 col-sm-offset-3">
        <h1>{{review.title}}</h1>
        <h2>{{review.movieTitle}}</h2>
        <p>{{review.description}}</p>
        <p><a href = "/movies/{{review.movieId}}/reviews/{{review._id}}/edit">Edit</a></p>
        <p><form action = "#" id = "newComment">
            <button class = "btn btn-primary" type = "submit">Delete</button>
        </form></p>

        {{> comment-form}}

        <hr>
    <div id = "comments">
        {{#each comments}}
            {{> comment}}
        {{/each}}
    </div>
    </div>
</div>
