<div class = "row">
    <img class = "movie-image" src = "https://image.tmdb.org/t/p/w500{{movie.poster_path}}" />
    <div class = "movie-desc">
        <h1>{{movie.title}}</h1>
        <p>{{movie.overview}}</p>
        <div class="trailer-box">
            <iframe class="movie-trailer" src="https://www.youtube.com/embed/{{movie.trailer_youtube_id}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
        <div class="reviews">
            <a href = "/movies/{{movie.id}}/reviews/new" class = "btn btn-primary">Write Review</a>
            <h3>Reviews</h3>
            {{#each reviews}}
                {{> review}}
            {{/each}}
        </div>
    </div>
    <div class = "text-right">
        <a href = "/movies/{{movie.id}}/reviews/new" class = "btn btn-primary">Write Review</a>
    </div>
</div>


